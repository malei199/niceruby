/**index.wxss**/

/* 首页头部 */

.index_header {
  width: 100%;
  height: 80rpx;
  background: #ED5566;
}

.index_header_btn {
  color: #FFFFFF;
  font-size: 26rpx;
}

.jt_img {
  margin-top: 34rpx;
  margin-left: 10rpx;
  width: 20rpx;
  height: 14rpx;
  display: inline-flex;
}

.index_header_btn.btn_left {
  float: left;
  line-height: 70rpx;
  padding-top: 5rpx;
  padding-left: 30rpx;
}

.index_header_btn.btn_right {
  float: right;
  width: 120rpx;
  height: 58rpx;
  border-radius: 6px;
  border: 1px solid #fff;
  margin-top: 10rpx;
  margin-right: 30rpx;
  line-height: 58rpx;
  text-align: center;
}

.index_search_box {
  float: left;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 35rpx;
  width: 420rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 6rpx;
  line-height: 60rpx;
  text-align: center;
  color: #B2B2B2;
  font-size: 26rpx;
}

.index_search_box.noClock {
  width: 575rpx;
}

.index_search_icon {
  display: inline-flex;
  vertical-align: sub;
}

/* 首页内容 */

.index_content {
  width: 750rpx;
}

.index_slide {
  display: block;
  width: 100%;
  height: 300rpx;
}

.index_content .index_minNav {
  background: #fff;
  padding: 30rpx 30rpx 22rpx;
  display: block;
  height: 140rpx;
}

.index_content .index_minNav div {
  float: left;
  width: 20%;
  overflow: hidden;
}

.index_content .index_minNav div image {
  width: 90rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto 12rpx;
}

.index_content .index_minNav div p {
  display: block;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  color: #353535;
}

.index_content .index_List1 {
  background: #fff;
  margin-top: 20rpx;
}

.index_list1_h3 {
  padding: 0 30rpx;
  display: block;
  height: 80rpx;
  font-size: 34rpx;
  line-height: 80rpx;
  color: #353535;
  overflow: hidden;
  border-bottom: 1px solid #E5E5E5;
}

.index_list1_h3 span {
  float: right;
  font-size: 24rpx;
  color: #888888;
}

.index_list1_h3 span em {
  color: #ED5566;
}

.index_content .index_List1 .index_list1_ul li {
  margin: 0 30rpx;
  display: block;
  border-bottom: 1px solid #E5E5E5;
  padding-bottom: 36rpx;
}

.index_content .list1_title {
  margin-top: 24rpx;
  /* width: 100%;
  height: 50rpx; */
  display: block;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #353535;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.index_content .list1_title .grade {
  float: left;
  margin-right: 13rpx;
  padding: 0 13rpx;
  font-size: 20rpx;
  line-height: 50rpx;
  border-radius: 3px;
}

.index_content .list1_title .grade.gradeStyle1 {
  color: #FF4C13;
  background: #FFE1D6;
}

.index_content .list1_title .grade.gradeStyle2 {
  color: #EB8600;
  background: #FFEFD6;
}

.index_content .list1_title .grade.gradeStyle3 {
  color: #BEA200;
  background: #FFF1D6;
}

.index_content .list1_con {
  overflow: hidden;
}

.index_content .list1_con span {
  float: left;
  overflow: hidden;
  width: 450rpx;
  font-size: 28rpx;
  line-height: 37rpx;
  color: #888888;
}

.index_content .list1_con .address {
  margin-top: 26rpx;
}

.index_content .list1_con .name {
  margin-top: 25rpx;
}

.index_content .list1_con .price {
  width: 168rpx;
  float: right;
  margin-top: 27rpx;
  margin-bottom: 8rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  text-align: center;
}

.index_content .list1_con .address image {
  float: left;
  margin-top: 7rpx;
  margin-right: 14rpx;
  width: 23rpx;
  height: 28rpx;
}

.index_content .list1_con .name image {
  margin-top: 7rpx;
  margin-right: 14rpx;
  float: left;
  width: 25rpx;
  height: 25rpx;
}

.index_content .list1_con .btn {
  float: right;
  width: 168rpx;
  height: 60rpx;
  background: #ED5566;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  border-radius: 3px;
}