.my_index {
    background: #F4F4F4;
}

.my_index .my_header {
    overflow: hidden;
    padding-right: 32rpx;
    background: #ED5566;
}

.my_index .my_header .face_img {
    float: left;
    width: 128rpx;
    height: 128rpx;
    border-radius: 128rpx;
    margin: 30rpx 36rpx 42rpx 30rpx;
}

.my_index .my_header .userName {
    float: left;
    width: 520rpx;
    margin-top: 38rpx;
    font-size: 36rpx;
    color: #FFFFFF;
    line-height: 50rpx;
}

.my_index .my_header .assets {
    float: left;
    width: 156rpx;
    height: 48rpx;
    margin-top: 14rpx;
    background: #AD3C48;
    border-radius: 100px;
    font-size: 24rpx;
    color: #FFFFFF;
    line-height: 48rpx;
}

.my_index .my_header .assets image {
    display: inline-block;
    margin-left: 12rpx;
    width: 28rpx;
    height: 28rpx;
    vertical-align: sub;
}

.my_index .my_header .pay {
    float: right;
    width: 120rpx;
    height: 48rpx;
    margin-top: 14rpx;
    font-size: 26rpx;
    color: #FFFFFF;
    line-height: 48rpx;
    text-align: center;
    border: 1px solid #fff;
    border-radius: 3px;
}

.my_index .my_list_btnBox ul {
    display: block;
    overflow: hidden;
}

.my_index .my_list_btnBox ul li {
    display: block;
    overflow: hidden;
    padding-right: 26rpx;
    background: #fff;
    border-bottom: 1px solid #E5E5E5;
}

.my_index .my_list_btnBox ul li .icon {
    float: left;
    width: 56rpx;
    height: 56rpx;
    margin-left: 30rpx;
}

.my_index .my_list_btnBox ul li .text {
    color: #000000;
    font-size: 34rpx;
    line-height: 90rpx;
}

.my_index .my_list_btnBox ul li .jt {
    float: right;
    width: 16rpx;
    height: 26rpx;
    margin: 32rpx 0;
}